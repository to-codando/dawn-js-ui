{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "checkJs": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames":true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
  },
  "files": ["browser.d.ts"],
  "include": [
    "./**/*.js"
  ]
}

