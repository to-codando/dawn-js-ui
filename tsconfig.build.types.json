{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "emitDeclarationOnly": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["node", "mocha", "chai"],
    "esModuleInterop": true
  },
  "files": ["browser.d.ts"],
  "include": [
    "./**/*.js"
  ]
}

