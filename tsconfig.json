{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "allowJs": true,
    "checkJs": false,
    "emitDeclarationOnly": true,
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames":true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "outDir": "./src/types"
  },
  "include": [
    "./src/components/**/*.js",
  ],
  "exclude": [
    "./src/**/*.d.ts",
    "node_modules",
    "types"
  ]
}
